<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bck"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/i7"
    tools:context="com.example.pavel.myowllschef.MainActivity">


    <LinearLayout
        android:id="@+id/layoutupper"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"

        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <RadioGroup
            android:id="@+id/radioGroupsettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/RadioB1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="@string/option2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/yellowdarkorange" />

            <RadioButton
                android:id="@+id/RadioB2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="@string/option1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/yellowdarkorange" />


        </RadioGroup>

        <Button
            android:id="@+id/buttonupper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="125dp"
            android:background="@null"
            android:text="@null"
            android:textColor="@color/yellow"
            android:visibility="visible" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>

